// footer styles
footer
    background-color cd-foreground
    color cd-background

#contact-block
    padding 60px 0
    text-align: left
    h2
        text-transform: uppercase
        margin-bottom 30px
    h3
        text-transform: uppercase
        font-weight: bold
    p
