// videodisplay styles
#videodisplay
    display: none
    z-index: 150
    position fixed
    top 0
    left 0
    height 100vh
    width 100%

    video
        position absolute
        z-index: 1
        top 50%
        left 50%
        transform: translate(-50%,-50%)
        max-width 80%
        max-height: 600px

#videodisplay.shown
    display: block

#click-catcher
    position absolute
    top 0
    left 0
    z-index: 0
    height 100vh
    width 100%
    background-color rgba(0, 0, 0, 0.8)
    svg
        color white
        position absolute
        top 7px
        left 7px
        // transform: translateX(-50%)
        width 50px
        height 50px
        cursor pointer
