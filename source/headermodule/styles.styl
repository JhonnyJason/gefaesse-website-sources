logo-size = 120px
header-padding = 20px
menu-button-size = 30px

max-width-for-mobile = 700px

// header styles
header
    background-color cd-darkbackground
#headermenu
    position fixed
    top 0
    width 100%
    padding header-padding header-padding 0 header-padding
    box-sizing: border-box
    background-color cd-darkbackground
    z-index 2
    transition transform 0.5s
    
.small-nav
    transform translateY(-140px)

#logo,
#mobile-logo
    margin auto
    width logo-size
    height logo-size

#mobile-logo-row
    display none

#fa-links
    position absolute 
    // top header-padding
    bottom (header-padding - 3px)
    right header-padding
    text-align: right
    text-decoration: underline

#menu-open-button,
#menu-close-button
    width menu-button-size
    height menu-button-size
    padding 5px
    display none

#menu-row
    position relative
    z-index: 2
    padding-top 20px
    text-transform: uppercase
    display flex
    justify-content: space-between
    .menu-link
        position relative
        font-size 14pt
        cursor pointer
        padding-bottom header-padding
    .menu-link:hover > a
        text-decoration: underline

    .submenu
        display flex
        flex-direction column
        position absolute
        top 30px
        left 0
    .submenu-link
        cursor pointer
        transition background 0.3s
        font-size 11pt
        background-color white
        padding 7px
        margin-top 3px
        min-width 150px
        text-align: left
    .submenu-link:hover
        background-color cd-darkbackground
        

#ogia-submenu.submenu
    display: none
#ogia-link:hover
    #ogia-submenu.submenu
        display: flex

#ogia-link.tapped
    #ogia-submenu.submenu
        display: flex

#termine-submenu.submenu
    display: none
#termine-link:hover
    #termine-submenu.submenu
        display: flex

#termine-link.tapped
    #termine-submenu.submenu
        display: flex

#webinare-submenu.submenu
    display: none
#webinare-link:hover
    #webinare-submenu.submenu
        display: flex

#webinare-link.tapped
    #webinare-submenu.submenu
        display: flex

#banner-image
    margin-top: 200px
    z-index: 1
    position relative
    width 100%
    height 420px
    background-color black
    background-position bottom
    background-size: cover
    
#image-credits
    position absolute
    left 10px
    bottom 10px
#image-credits:after
    // content: "Sample Credit"
    font-size: 11pt
    font-family: "Inter Light"


@media screen and (max-width: max-width-for-mobile)
    .big-nav
        transform translateY(-192px)

    .small-nav
        transform translateY(-747px)

    #logo-row
        margin-bottom 52px
    
    #fa-links
        top header-padding + 20px + logo-size
    
    .menu-open
        #menu-close-button
            display block
    .menu-closed
        #menu-open-button
            display block

    #menu-row
        flex-direction: column
        text-align: left
        .submenu
            margin-top 5px
            position static



