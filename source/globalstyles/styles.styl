// globalstyles styles


/*==========================================================
Color Theme
==========================================================*/
cd-foreground = #11204b
cd-flash = #ce1f1c
cd-dark = #212121
cd-background = white
cd-darkbackground = #ecf0f2

/*==========================================================
Global Variables
==========================================================*/
max-content-width = 900px
inner-content-width = 750px
mobile-side-padding = 15px


/*==========================================================
CD Font includes
==========================================================*/
// Inter Font as Helvetica Backup
@font-face 
    font-family: "Inter Variable"
    src: url("/font/Inter-VariableFont_slnt,wght.ttf")

@font-face 
    font-family: "Inter Regular"
    src: url("/font/Inter-Regular.ttf")

@font-face 
    font-family: "Inter Light"
    src: url("/font/Inter-Light.ttf")


/*==========================================================
General Tag Styles
==========================================================*/
body
    background-color cd-background
    color cd-foreground
    font-family: Helvetica Neue,Helvetica, Inter Regular, Arial, sans-serif
    text-align: center
    font-size: 12pt
    // height 100vh
    width 100%
    // overflow hidden

h1
    font-size: 19pt
    letter-spacing: 2pt
    text-transform: uppercase
main
    h1
        font-weight bold
        color cd-flash
        text-decoration: underline
        text-underline-offset: 5px
        text-decoration-thickness: 3px
        line-height: 140%
        margin-bottom 40px
        padding-top 20px

h2
    font-size: 17pt
    letter-spacing: 1.0pt
h3
    font-size: 11pt
    letter-spacing: 1.0pt
p
    font-size: 12pt
    letter-spacing: 1pt
    line-height: 130%
    // font-weight lighter
    font-family: Helvetica Light, Inter Light


.download-button
    display block
    border-radius: 10px
    width: 270px
    padding: 20px
    box-sizing: border-box
    margin auto
    background-color #707993
    color white
    font-size 14pt
    text-transform: uppercase
    letter-spacing: 1.5pt
    margin-bottom: 10px


.inner-content
    margin auto
    max-width: inner-content-width
    padding-left: mobile-side-padding
    padding-right: mobile-side-padding

.max-content
    margin auto
    max-width: max-content-width
    padding-left: mobile-side-padding
    padding-right: mobile-side-padding

paddingless-max-content-width = (max-content-width + (2 * mobile-side-padding))
@media screen and (min-width: paddingless-max-content-width)
    .max-content
        padding-left: 0
        padding-right: 0

paddingless-inner-content-width = (inner-content-width + (2 * mobile-side-padding))
@media screen and (min-width: paddingless-inner-content-width)
    .inner-content
        padding-left: 0
        padding-right: 0



.overly-broad-content
    padding-left: 90px
    padding-right 90px
    box-sizing: border-box
    
@media screen and (max-width: 700px)
    .overly-broad-content
        padding-left: 40px
        padding-right 40px

@media screen and (max-width: 450px)
    .overly-broad-content
        padding-left: 15px
        padding-right 15px
